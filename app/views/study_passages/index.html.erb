<p id="notice"><%= notice %></p>

<h1>Listing Study Passages</h1>

<table>
  <thead>
    <tr>
      <th>Study</th>
      <th>Bible book</th>
      <th>Chapter start</th>
      <th>Verse start</th>
      <th>Chapter end</th>
      <th>Verse end</th>
      <th>Bible translation</th>
      <th>Position</th>
      <th>Bible passage annotation</th>
      <th>Duration in minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_passages.each do |study_passage| %>
      <tr>
        <td><%= study_passage.study %></td>
        <td><%= study_passage.bible_book %></td>
        <td><%= study_passage.chapter_start %></td>
        <td><%= study_passage.verse_start %></td>
        <td><%= study_passage.chapter_end %></td>
        <td><%= study_passage.verse_end %></td>
        <td><%= study_passage.bible_translation %></td>
        <td><%= study_passage.position %></td>
        <td><%= study_passage.bible_passage_annotation %></td>
        <td><%= study_passage.duration_in_minutes %></td>
        <td><%= link_to 'Show', study_passage %></td>
        <td><%= link_to 'Edit', edit_study_passage_path(study_passage) %></td>
        <td><%= link_to 'Destroy', study_passage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

